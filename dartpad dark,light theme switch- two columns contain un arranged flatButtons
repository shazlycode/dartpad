import 'package:flutter/material.dart';

void main() => runApp(MyApp());
enum Status { day, night }

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      theme: ThemeData.light(),
      home: MyHomePage(),
    );
  }
}

class MyHomePage extends StatefulWidget {
  @override
  _MyHomePageState createState() => _MyHomePageState();
}

class _MyHomePageState extends State<MyHomePage> {
  Status selectedStatus;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
        backgroundColor:
            selectedStatus == Status.day ? Colors.white : Colors.black,
        appBar: AppBar(
          actions: [
            RaisedButton(
              child: Text("Day"),
              onPressed: () {
                setState(() {
                  selectedStatus = Status.day;
                });
              },
            ),
            RaisedButton(
              child: Text("Night"),
              onPressed: () {
                setState(() {
                  selectedStatus = Status.night;
                });
              },
            ),
          ],
          title: Text("Day Night"),
        ),
        body: Center(child:
          Container(
            
            padding: EdgeInsets.all(10),
            child: Row(
              children: [
                Expanded(
                  child: Column(
                    children: [
                      ReusableContainer(
                        height: 200,
                        child: FlatButton(
                          onPressed: () {
                            print("hi");
                          },
                          child: Container(),
                        ),
                      ),
                      SizedBox(height: 10),
                      ReusableContainer(
                        height: 150,
                        child: FlatButton(
                          onPressed: () {
                            print("hi");
                          },
                          child: Container(),
                        ),
                      ),
                      SizedBox(height: 10),
                      ReusableContainer(
                        height: 200,
                        child: FlatButton(
                          onPressed: () {
                            print("hi");
                          },
                          child: Container(),
                        ),
                      ),
                    ],
                  ),
                ),
                SizedBox(width: 10),
                Expanded(
                  child: Column(
                    children: [
                      ReusableContainer(
                        height: 100,
                        child: FlatButton(
                          onPressed: () {
                            print("hi");
                          },
                          child: Container(),
                        ),
                      ),
                      SizedBox(height: 10),
                      ReusableContainer(
                        height: 200,
                        child: FlatButton(
                          onPressed: () {
                            print("hi");
                          },
                          child: Container(),
                        ),
                      ),
                      SizedBox(height: 10),
                      ReusableContainer(
                        height: 250,
                        child: FlatButton(
                          onPressed: () {
                            print("hi");
                          },
                          child: Container(),
                        ),
                      ),
                    ],
                  ),
                ),
              ],
            ),
          ),
        ),);
  }
}

class ReusableContainer extends StatelessWidget {
  final double height;
  final Widget child;

  ReusableContainer({this.child, this.height});
  @override
  Widget build(BuildContext context) {
    return Container(
      decoration: BoxDecoration(
        borderRadius: BorderRadius.circular(10.0),
        color: Colors.green,
//         gradient: LinearGradient(colors:[Colors.red, Colors.blue]),
        boxShadow: [
          BoxShadow(
              color: Colors.grey,
              spreadRadius: 2,
              blurRadius: 5,
              offset: Offset(2, 2))
        ],
      ),
      height: height,
      width: 400,
      child: child,
    );
  }
}
